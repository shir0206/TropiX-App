<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPinkMedium"
    tools:context=".gui.MainActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="318dp"
        android:layout_height="420dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/btn_startGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/t000_logo"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_startGame"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/drw_fill_pink_border_white"
        android:text="@string/btn_startGame"
        android:textAllCaps="true"
        android:textColor="@color/colorWhiteBright"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_popup_store"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo" />

    <Button
        android:id="@+id/btn_popup_store"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/drw_fill_pink_border_white"
        android:text="@string/btn_store"
        android:textColor="@color/colorWhiteBright"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_startGame" />

</android.support.constraint.ConstraintLayout>